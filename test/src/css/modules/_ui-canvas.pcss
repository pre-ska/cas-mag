.ui-canvas {
    position: fixed;
    z-index: 4;
    top: 0;
    width: 100%;
    height: 100%;
    @mixin ui-default-transition transform;
    background: var(--color__white);
    padding: 2.4rem;
    @mixin rhythm 1, 1, 0, 0;
    overflow: auto;

    @media (--medium) {
        padding: 4.8rem;
        @mixin rhythm 2, 2, 0, 0, $breakpoint-768px;
    }

    @media (--large) {
        @mixin rhythm 4, 4, 0, 0, $breakpoint-1024px;
    }
}

.ui-canvas--side {
    @media (--medium) {
        width: 80%;
        padding: 4.8rem;
        @mixin rhythm 2, 2, 0, 0, $breakpoint-768px;
    }

    @media (--large) {
        width: 40%;
        @mixin rhythm 4, 4, 0, 0, $breakpoint-1024px;
    }
}

.ui-canvas--left {
    left: 0;
    right: auto;
    transform: translate3D(-100%, 0, 0);

    &.active {
        transform: translate3D(0, 0, 0);
    }
}

.ui-canvas--right {
    left: auto;
    right: 0;
    transform: translate3D(100%, 0, 0);

    &.active {
        transform: translate3D(0, 0, 0);
    }
}

.ui-canvas--center {
    opacity: 0;
    visibility: hidden;

    &.active {
        opacity: 1;
        visibility: visible;
    }

    @media (--medium) {
        width: 70%;
        height: 50%;
        top: 50%;
        left: 50%;
        margin-top: -25%;
        margin-left: -35%;
    }

    @media (--large) {
        height: 20rem;
        margin-top: -10rem;
    }
}

.active {
    & .ui-canvas--right {
        transform: translate3D(0, 0, 0);
    }

    & .ui-canvas--center {
        opacity: 1;
        visibility: visible;
    }
}

.ui-canvas-close {
    width: 100%;
    margin-bottom: 1.6rem;
    text-align: right;
    border: none;
    background: transparent;
    @mixin flex row, center, flex-end, wrap;
    @mixin ui-default-transition color;
    cursor: pointer;

    &:hover {
        color: var(--theme__color__secondary);
    }
}