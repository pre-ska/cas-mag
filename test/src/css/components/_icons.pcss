[class^="icon-"],
[class*=" icon-"] {
    font-family: "icomoon";
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    font-smoothing: antialiased;
    osx-font-smoothing: grayscale;
    cursor: pointer;
    font-size: 1.5rem;
    color: var(--theme__color__icons);
    text-decoration: none;

    &:before {
        color: white;
    }
}

.extra {
    font-size: 2rem;
    padding: 0;
}

.checkbox {
    margin: 1rem 2rem;

    & label {
        color: var(--theme__color__typo);
        cursor: pointer;
        display: inline-block;
        position: relative;
        padding-left: 25px;
        margin-right: 10px;
        font-family: Montserrat;
        font-style: normal;

        &:before {
            box-sizing: border-box;
            content: "";
            width: 18px;
            height: 18px;
            position: absolute;
            left: 0;
            border: 1px solid var(--theme__color__checkbox);
            border-radius: 2px;
        }
    }

    & input[type="checkbox"] {
        display: none;
    }

    & input[type="checkbox"]:checked + label:before {
        background-color: var(--theme__color__checkbox);
    }
}
