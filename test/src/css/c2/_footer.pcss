.page-footer {
    background: var(--theme__color__primary__light);
    color: var(--color__white);
    padding-top: 12px;
    background-color: var(--theme__color__dark);

    @media (--medium) {
        padding-top: 18px;
    }
}

.footer {
    &.content {
        & .menu__wrapper {
            max-width: 1140px;
            margin: 0 auto;
            padding: 0 10px;

            @media (--medium) {
                padding: 0 24px;
            }

            & .menu {
                display: grid;
                border-bottom: 1px solid var(--theme__color__wheat);

                @media (--medium) {
                    grid-template-columns: 1fr 1fr 1fr 3fr;
                }
            }
        }
    }

    /* &.links {
        @mixin marginTrailer 1;

        @media (--medium) {
            @mixin marginTrailer 1, $breakpoint-768px;
        }

        @media (--large) {
            @mixin marginTrailer 1, $breakpoint-1024px;
        }
    } */
}

.menu__column {
    color: var(--theme__color__white);
    display: flex;
    flex-direction: column;
    margin-bottom: 18px;
    padding-top: 6px;

    & a {
        text-decoration: none;
        display: inline-block;
        color: var(--theme__color__white);
        font-size: 12px;
        line-height: 30px;
        font-style: normal;
        font-weight: 400;
    }

    & p {
        font-size: 13px;
        line-height: 18px;
        padding-top: 18px;
        font-weight: 300;
    }
}

.menu__column-title {
    color: var(--theme__color__wheat);
    border-bottom: 1px solid var(--theme__color__wheat);
    font-size: 1rem;
    line-height: 18px;
    margin: 0;
    font-style: normal;
    font-weight: 400;

    @media (--medium) {
        border-bottom: none;
    }
}

.footer__input {
    background-color: var(--theme__color__gray);

    height: 30px;

    color: var(--theme__color__checkbox);
    border: none;
    outline: none;
    border-radius: 3px;
    box-shadow: inset 0 1px 4px #000, inset 0 1px 0 rgba(77, 77, 77, 0.5);
    padding: 1px 15px 1px 12px;
}

.footer__links-social {
    display: flex;
    justify-content: flex-end;
    padding: 10px 0;

    & > * {
        margin-left: 18px;
        cursor: pointer;
    }
}

