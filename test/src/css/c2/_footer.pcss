.description {
    padding: 0 0px 18px 0px;
    max-width: 1140px;
    margin: 0 auto;
    padding: 12px 10px;

    @media (--medium) {
        padding: 12px 24px 18px 24px;
    }
}

/* .description__wrapper {
    margin: 12px 0;
} */

.description__txt {
    font-size: 12px;
    line-height: 18px;
    font-weight: 300;
    color: var(--theme__color__white);

    @media (--medium) {
        font-size: 13px;
        line-height: 18px;
    }
}

.description__link {
    color: var(--theme__color__links);
    line-height: 15px;
    font-size: 12px;
    text-decoration: underline;
}

.footer__final {
    background-color: var(--theme__color__offconvas_navbar);

    /* padding: 0 10px 18px 0; */
}

.footer__final-container {
    display: grid;
    grid-template-areas: "g1"
    "g2"
    "g3";
    grid-gap: 13px;
    padding: 13px 0 12px 0;
    max-width: 1140px;
    margin: 0 auto;

    @media (--medium) {
        grid-template-areas: "g2 g3 g1";
        grid-template-columns: auto 1fr auto;
        padding: 13px 24px 12px 24px;
    }

    @media (--large) {
        padding: 0 24px;
    }
}

.footer__final-link {
    line-height: 0;
}

.footer__final-credit {
    grid-area: g2;
    grid-gap: 12px;

    & .card {
        width: 40px;
        height: 24px;
        background-image: url("../images/kartice.svg");
    }
}

.visa {
    background-position: 0px 72px;
}

.master {
    background-position: 0px 24px;
}

.discover {
    background-position: 0px 0px;
}

.amex {
    background-position: 0px 48px;
}

.footer__final-copyright {
    grid-area: g3;
    display: flex;
    flex-direction: column;
    color: var(--theme__color__white);

    @media (--medium) {
        flex-direction: row;
        justify-content: center;
    }
}

.copyright-txt {
    white-space: nowrap;
    line-height: 18px;
    font-size: 12px;
    font-weight: 300;

    @media (--large) {
        font-size: 14px;
        line-height: 60px;
    }
}

.footer__final-social {
    grid-area: g1;
    grid-gap: 24px;
    padding: 5px 0;

    @media (--medium) {
        grid-gap: 12px;
        padding: 0;
    }
}

