.newsletter-container {
    background: var(--theme__color__secondary);
}

.newsletter-wrapper {
    position: relative;

    @media (--medium) {
        @mixin flex row, center, center, wrap;
    }
}

.field {
    &.newsletter {
        & div.mage-error {
            position: absolute;
            top: pxtorem(30px);
            left: 0;
        }

        @media (--medium) {
            margin-bottom: 0;
            margin-right: pxtorem(8px);
        }
    }
}

.block {
    &.newsletter {
        @mixin container $container-width, $container-gutter;
        @mixin rhythm 1, 1, 0, 0;
        text-align: center;

        @media (--medium) {
            @mixin rhythm 1, 1, 0, 0, $breakpoint-768px;
        }

        @media (--large) {
            @mixin rhythm 2, 2, 0, 0, $breakpoint-1024px;
        }
    }
}

.footer__final-social {
    grid-area: g1;
    grid-gap: 24px;
    padding: 5px 0;

    @media (--medium) {
        grid-gap: 12px;
        padding: 0;
    }
}

.footer__final-link {
    line-height: 0;
}
