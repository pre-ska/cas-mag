h1 {
    @mixin adjustFontSize 28px, 2;

    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin adjustFontSize 31px, 2, $breakpoint-768px;
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 33px, 2, $breakpoint-1024px;
        @mixin marginTrailer 1, $breakpoint-1024px;
    }
}

h2 {
    @mixin adjustFontSize 24px, 2;
    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin adjustFontSize 27px, 2, $breakpoint-768px;
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 28px, 2, $breakpoint-1024px;
        @mixin marginTrailer 1, $breakpoint-1024px;
    }
}

h3 {
    @mixin adjustFontSize 21px, 2;
    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin adjustFontSize 23px, 2, $breakpoint-768px;
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 24px, 2, $breakpoint-1024px;
        @mixin marginTrailer 1, $breakpoint-1024px;
    }
}

h4 {
    @mixin adjustFontSize 18px, 1;
    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin adjustFontSize 20px, 1, $breakpoint-768px;
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 21px, 1, $breakpoint-1024px;
        @mixin marginTrailer 1, $breakpoint-1024px;
    }
}

h5 {
    @mixin adjustFontSize 16px, 1;
    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin adjustFontSize 17px, 1, $breakpoint-768px;
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 18px, 1, $breakpoint-1024px;
        @mixin marginTrailer 1, $breakpoint-1024px;
    }
}

h6 {
    @mixin adjustFontSize 14px, 1;
    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin adjustFontSize 15px, 1, $breakpoint-768px;
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 16px, 1, $breakpoint-1024px;
        @mixin marginTrailer 1, $breakpoint-1024px;
    }
}

p {
    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin marginTrailer 1, $breakpoint-1024px;
    }
}

.small-copy {
    @mixin adjustFontSize 10px 1;

    @media (--medium) {
        @mixin adjustFontSize 11px, 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 12px, 1, $breakpoint-1024px;
    }
}

a {
    color: var(--theme__color__secondary);
    @mixin ui-default-transition color;

    &:hover {
        color: var(--theme__color__secondary__darken);
    }
}

ul {
    @mixin list-reset;
}

.page-title-wrapper:not(.product) {
    & .page-title {
        width: 100%;
        @mixin trailingBorder 1px, 1, solid;
        @mixin marginTrailer 1;
        border-color: var(--theme__color__primary__lighter);

        @media (--medium) {
            @mixin trailingBorder 1px, 1, solid, $breakpoint-768px;
            @mixin marginTrailer 1, $breakpoint-768px;
            border-color: var(--theme__color__primary__lighter);
        }

        @media (--large) {
            @mixin trailingBorder 1px, 1, solid, $breakpoint-1024px;
            @mixin marginTrailer 1, $breakpoint-1024px;
            border-color: var(--theme__color__primary__lighter);
        }
    }
}
