@font-face {
    font-family: "icomoon";
    src: url("../fonts/icomoon/icomoon.eot?9p1lm");
    src: url("../fonts/icomoon/icomoon.eot?9p1lm#iefix")
    format("embedded-opentype"),
    url("../fonts/icomoon/icomoon.woff2?9p1lm") format("woff2"),
    url("../fonts/icomoon/icomoon.ttf?9p1lm") format("truetype"),
    url("../fonts/icomoon/icomoon.woff?9p1lm") format("woff"),
    url("../fonts/icomoon/icomoon.svg?9p1lm#icomoon") format("svg");
    font-weight: normal;
    font-style: normal;
}

[class^="icon-"],
[class*=" icon-"] {
    font-family: "icomoon" !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1.5;

    /* Better Font Rendering =========== */
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

