@lost flexbox flex;

.product-items {
    list-style-type: none;
    padding: 0;
    margin: 0;
    lost-flex-container: row;
}

.product-item {
    position: relative;
    flex-grow: 1;
    background: var(--color__white);
    padding: 12px;
    @mixin marginTrailer 1;

    @media (--medium) {
        @mixin marginTrailer 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin marginTrailer 1, $breakpoint-1024px;
    }

    &:after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
        width: 100%;
        height: 100%;
        border-radius: 5px;
        opacity: 0;
        box-shadow: 0 10px 18px rgba(0, 0, 0, 1);
        transition: opacity 0.2s ease-in-out;
    }

    &:hover {
        &:after {
            opacity: 1;
        }
    }
}

.product-items--grid {
    & .product-item {
        lost-column: 1/2 2 20px;

        @media (--medium) {
            lost-column: 1/3 3 24px;
        }

        @media (--large) {
            lost-column: 1/4 4 24px;
        }

    }
}

.product-image-wrapper {
    display: block;
    height: 0;
}

.product-image-photo {
    display: block;
    margin: 0 auto;
    width: 100%;
    margin-top: 36px;

    @media (--medium) {
        margin-top: 45px;
    }

    @media (--large) {
        margin-top: 54px;
        width: 220px;
        height: 220px,
    }
}

.product-item-info {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.product-item-details {
    text-align: center;
    position: relative;

    & .price-box {
        border-top: 1px solid var(--theme__color__separator);
        padding-top: 6px;
        margin: 0 24px;

        @media (--large) {
            padding-top: 12px;
            margin: 0 36px;
        }
    }
}

.product-item-name {
    @mixin section-title;
    @mixin adjustFontSize 12px, 1;
    @mixin rhythm 0, 0, 0.5, 0.5;

    @media (--medium) {
        @mixin adjustFontSize 13px, 1, $breakpoint-768px;
        @mixin rhythm 0, 0, 0.5, 0.5, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 14px, 1, $breakpoint-1024px;
        @mixin rhythm 0, 0, 0.5, 0.5, $breakpoint-1024px;
    }
}

.product-item-link {
    display: block;
    @mixin truncate 100%;
    white-space: normal;
    height: 108px;

    @media (--medium) {
        height: 90px;
    }

    @media (--large) {
        height: 54px;
    }
}

.product-reviews-summary {
    @mixin flex row, center, center, wrap;
    @mixin rhythm 0, 0, 0.5, 0.5;
    @mixin adjustFontSize 12px, 1;

    @media (--medium) {
        @mixin adjustFontSize 13px, 1, $breakpoint-768px;
        @mixin rhythm 0, 0, 0.5, 0.5, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 14px, 1, $breakpoint-1024px;
        @mixin rhythm 0, 0, 0.5, 0.5, $breakpoint-1024px;
    }

    & .label {
        @mixin no-display;
    }

    & .rating-summary {
        margin-right: pxtorem(6px);
        position: relative;

        &::after  {
            font-family: icomoon;
            content: var(--icon__star) var(--icon__star) var(--icon__star) var(--icon__star) var(--icon__star);
            color: var(--theme__color__primary__lighter);
            display: inline-block;
            position: absolute;
            top: 0;
            left: 0;
            @mixin adjustFontSize 12px, 1;

            @media (--medium) {
                @mixin adjustFontSize 13px 1, $breakpoint-768px;
            }

            @media (--large) {
                @mixin adjustFontSize 14px 1, $breakpoint-1024px;
            }
        }
    }

    & .rating-result {
        & > span {
            display: block;
            overflow: hidden;

            &::after  {
                font-family: icomoon;
                content: var(--icon__star) var(--icon__star) var(--icon__star) var(--icon__star) var(--icon__star);
                color: var(--theme__color__secondary);
                display: inline-block;
                position: relative;
                top: 0;
                left: 0;
                z-index: 2;

                @mixin adjustFontSize 12px, 1;

                @media (--medium) {
                    @mixin adjustFontSize 13px 1, $breakpoint-768px;
                }

                @media (--large) {
                    @mixin adjustFontSize 14px 1, $breakpoint-1024px;
                }
            }
        }

        & > span span {
            @mixin no-display;
        }
    }

    & .reviews-actions {
        & span {
            display: none;
        }
    }
}

.product-item-details__price-wrapper {
    @mixin section-title;
    @mixin adjustFontSize 12px, 1;

    @media (--medium) {
        @mixin adjustFontSize 12px, 1, $breakpoint-768px;
    }

    @media (--large) {
        @mixin adjustFontSize 12px, 1, $breakpoint-1024px;
    }

    & .price-final_price {
        @mixin flex row, center, center, wrap;

        &.wee {
            @mixin section-title;
        }
    }
}

.product-item-actions {
    & .actions-primary {
        width: 100%;
        margin-top: 11px;
        display: none;

        @media (--large) {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }

    & .action.tocart {
        font-size: 12px;
        line-height: 30px;
        padding: 0 12px;
    }

    & .action.towishlist,
    & .action.tocompare {
        & span {
            @mixin no-display;
        }

        &::after {
            font-family: icomoon;
            display: inline-block;
            @mixin adjustFontSize 20px, 1;
        }
    }

    & .action.towishlist {
        &::after {
            content: var(--icon__heart);
        }
    }

    & .action.tocompare {
        &::after {
            content: var(--icon__bar__chart);
        }
    }
}

.product-item-inner {
    margin-top: auto;
}

.swatch-attribute-options {
    display: flex;
    flex-flow: row wrap;

    & a {
        color: var(--theme__color__primary);

        &:hover {
            color: var(--theme__color__secondary);
        }
    }
}

.swatch-option {
    border: 1px solid var(--theme__color__primary__lighter);
    height: pxtorem(24px);
    width: pxtorem(36px);
    font-weight: 700;
    font-size: pxtorem(12px);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: pxtorem(6px);
    @mixin rhythm 0, 0, 0.25, 0.25;
    @media (--medium) {
        @mixin rhythm 0, 0, 0.25, 0.25, $breakpoint-768px;
    }
    @media (--large) {
        @mixin rhythm 0, 0, 0.25, 0.25, $breakpoint-1024px;
    }

    &:focus {
        border: 1px solid var(--theme__color__primary);
        outline: 0;
    }
}

.swatch-input {
    left: -1000px;
    position: absolute;
    visibility: hidden;
}

@media (--medium__max) {
    .filter {
        &.active {
            & .filter-title {
                position: fixed;
                z-index: 4;
                top: 0;
                right: 0;
                width: 100%;
                padding-top: 4.8rem;
                background: var(--color__white);
            }

            & .filter-title-action {
                position: static;
                @mixin flex row, center, flex-end, wrap;
                background: none;
                width: 100%;
                max-width: none;

                & .label-close {
                    display: inline;
                    margin-right: 1.6rem;
                }

                & .label-open {
                    display: none;
                }

                &::after {
                    content: "\e91f";
                    font-family: icomoon;
                }
            }

            & .filter-content {
                opacity: 1;
                visibility: visible;
            }
        }
    }

    .filter-title {
        position: relative;

        & .filter-title-action {
            position: relative;
            height: 4rem;
            lost-column: 1/2 2 24px;
            position: absolute;

            & .label-close {
                display: none;
            }

            &. label-open {
                display: inline;
            }

            &:focus {
                outline: 0;
            }

            &:after {
                margin-left: 0.9rem;
                font-family: "icomoon";
                content: "\e917";
            }
        }
    }

    .filter-subtitle {
        display: block;
        margin-bottom: 3.2rem;
    }

    .filter-content {
        opacity: 0;
        visibility: hidden;
        position: fixed;
        overflow-y: auto;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 3;
        background: var(--color__white);

        &.active {
            opacity: 1;
            visibility: visible;
            padding: 1rem;
        }
    }

    .filter-options-item {
        &.active {
            & .filter-options-title {
                color: var(--theme__color__secondary);
            }
        }
    }

    .filter-options-title {
        &:focus {
            outline: 0;
        }

        &::after {
            float: right;
            font-family: "icomoon";
            content: "\e901";
            @mixin ui-default-transition transform;
        }

        &.active {
            &::after {
                transform: rotate(-180deg);
            }
        }
    }

    .filter-options-content {
        & .items {
            & a {
                @mixin flex row, center, flex-start, wrap;
                text-decoration: none;

                &:last-child {
                    margin-bottom: 0;
                }

                & input {
                    margin-right: 1.6rem;
                }
            }
        }
    }
}